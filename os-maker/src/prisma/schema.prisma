generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model Cliente {
  cnpj         String   @id
  razaoSocial  String
  endereco     String
  
  faturas      Fatura[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@map("clientes")
}

model Fatura {
  id                    String   @id @default(uuid())
  numeroFatura          String   @unique
  dataEmissao           DateTime @default(now())
  
  clienteCnpj           String
  cliente               Cliente  @relation(fields: [clienteCnpj], references: [cnpj])
  
  descricaoPagamento    String   @db.Text
  descricaoLocacao      String   @db.Text
  valorLocacao          Decimal  @db.Decimal(10, 2)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@map("faturas")
}